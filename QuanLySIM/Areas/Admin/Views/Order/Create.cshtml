@model QuanLySIM.Entities.PhieuMua

@{
    ViewBag.Title = "Phiếu Mua - Thêm Mới";
    Layout = "~/Areas/Admin/Views/Shared/_Admin.cshtml";
}

<link href="@Url.Content("~/Content/bs/admin/edit.css")" rel="stylesheet" media="screen"/>
<link href="@Url.Content("~/Content/themes/base/jquery-ui.css")" rel="stylesheet" type="text/css" />

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<script type="text/javascript">
    $(function () {
        $('#NgayDatMua').datepicker();
        $('#NgayDatMua').datepicker("option", "dateFormat", "mm/dd/yy");
        $('#NgayGiao').datepicker();
        $('#NgayGiao').datepicker("option", "dateFormat", "mm/dd/yy");
    });
</script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-edit">
        @if (ViewBag.FailMsg != null)
        {
            <p class="alert alert-danger">@ViewBag.FailMsg</p>
        }

        <p class="error-text">@Html.ValidationMessageFor(model => model.MaKH)</p>
        <p class="error-text">@Html.ValidationMessageFor(model => model.SimId)</p>
        <p class="error-text">@Html.ValidationMessageFor(model => model.NgayDatMua)</p>
        <p class="error-text">@Html.ValidationMessageFor(model => model.NgayGiao)</p>
        <p class="error-text">@Html.ValidationMessageFor(model => model.TongTien)</p>

        @Html.LabelFor(model => model.MaKH, "Khách Hàng")
        @Html.DropDownList("MaKH", null, "Chọn Khách Hàng", new { @class = "form-control" })
        
        @Html.LabelFor(model => model.SimId, "Mã SIM")
        @Html.DropDownList("SimId", null, "Chọn SIM", new { @class = "form-control" })

        @Html.LabelFor(model => model.NgayDatMua)
        @Html.TextBox("NgayDatMua", null, new { @class = "form-control", placeholder = "Ngày đặt mua" })        

        @Html.LabelFor(model => model.NgayGiao)
        @Html.TextBox("NgayGiao", null, new { @class = "form-control", placeholder = "Ngày giao" })

        @Html.LabelFor(model => model.TongTien)
        @Html.TextBox("TongTien", null, new { @class = "form-control", placeholder = "Tổng tiền" })

        <p><input type="submit" class="btn btn-lg btn-primary btn-block" value="Thêm" /></p>
    </div>
}