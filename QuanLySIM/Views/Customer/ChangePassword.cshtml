@model QuanLySIM.Entities.KhachHang

@{
    ViewBag.Title = "Quản Lý SIM - Thay Đổi Mật Khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="@Url.Content("~/Content/bs/changepassword.css")" rel="stylesheet" media="screen"/>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    
    <div class="form-changepassword">
        @if (ViewBag.FailMsg != null) 
        {
            <p class="alert alert-danger">@ViewBag.FailMsg</p>
        }
        
        @if (ViewBag.SuccessMsg != null) 
        {
            <p class="alert alert-success">@ViewBag.SuccessMsg</p>
        }        

        <p class="error-text">@Html.ValidationMessageFor(model => model.MatKhau)</p>        
            
        @Html.Password("MatKhau", null, new { @class = "form-control", placeholder = "Mật Khẩu", autofocus = true })
        @Html.Password("MatKhauMoi", null, new { @class = "form-control", placeholder = "Mật Khẩu Mới" })
        @Html.Password("XacNhanMatKhau", null, new { @class = "form-control", placeholder = "Xác Nhận Lại Mật Khẩu Mới" })
    
        <p>
            <input type="submit" class="btn btn-lg btn-primary btn-block" value="Thay Đổi" />            
        </p>
    </div>
}
