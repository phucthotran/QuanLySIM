@model QuanLySIM.Entities.KhachHang

@{
    ViewBag.Title = "Quản Lý SIM - Đăng ký tài khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="@Url.Content("~/Content/bs/register.css")" rel="stylesheet" media="screen"/>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    
    <div class="form-register">
        @if (ViewBag.FailMsg != null) 
        {
            <p class="alert alert-danger">@ViewBag.FailMsg</p>
        }

        <p class="error-text">@Html.ValidationMessageFor(model => model.TenTK)</p>
        <p class="error-text">@Html.ValidationMessageFor(model => model.MatKhau)</p>
        <p class="error-text">@Html.ValidationMessageFor(model => model.Email)</p>
    
        @Html.TextBox("TenTK", Model.TenTK, new { @class = "form-control", placeholder = "Tên Tài Khoản", autofocus = true })
        @Html.Password("MatKhau", Model.MatKhau, new { @class = "form-control", placeholder = "Mật Khẩu" })
        @Html.TextBox("Email", Model.Email, new { @class = "form-control", placeholder = "Email" })
    
        <p>
            <input type="submit" class="btn btn-lg btn-primary btn-block" value="Đăng Ký" /><br />
            Tôi đã có tài khoản. Tôi sẽ @Html.ActionLink("Đăng Nhập", "Login") vào tài khoản.
        </p>
    </div>
}
